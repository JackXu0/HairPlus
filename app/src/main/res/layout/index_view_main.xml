<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/filter_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/filter_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textview_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="发型风格"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_toRightOf="@id/textview_1"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/arrow_down"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="#11000000">

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/filter_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textview_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="洗剪烫染"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/textview_2"
                    android:src="@drawable/arrow_down"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="#11000000">

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/filter_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textview_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="价格区间"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/arrow3"
                    android:layout_width="13dp"
                    android:layout_toRightOf="@id/textview_3"
                    android:layout_height="13dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/arrow_down"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#11000000"
        >

    </LinearLayout>
    <LinearLayout
        android:id="@+id/popupwindow_left"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="全部"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:textColor="#bb000000"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/filter_check_button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="#11000000">

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="独立发型师"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:textColor="#bb000000"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/filter_check_button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="#11000000">

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="美发机构"
                android:textSize="20dp"
                android:textColor="#bb000000"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/filter_check_button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="#11000000">

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/popupwindow_right"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="全部"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:textColor="#bb000000"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/filter_check_button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="#11000000">

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/option5"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="100元/平以下"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:textColor="#bb000000"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/filter_check_button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="#11000000">

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/option6"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="100-199元/平"
                android:textSize="20dp"
                android:textColor="#bb000000"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/filter_check_button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="#11000000">

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/option7"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="200-299元/平"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:textColor="#bb000000"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/filter_check_button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="#11000000">

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/option8"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="300元/平以上"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:textColor="#bb000000"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/filter_check_button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="#11000000">

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frag"
        android:foreground="@drawable/shape_window_dim"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/index_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </FrameLayout>



</LinearLayout>