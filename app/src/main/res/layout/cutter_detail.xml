<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/arrow_back_grey"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BARBER INFO"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#22000000"></RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp">
                <wingsoloar.com.hairplus.Views.CircleImageView
                    android:id="@+id/avator"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/round_avator"
                    android:src="@drawable/avator8"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    />
                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/name_label"
                    android:layout_toRightOf="@id/avator"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:text="姓名："/>
                <TextView
                    android:id="@+id/age_label"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/name_label"
                    android:layout_toRightOf="@id/avator"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:text="剪龄："/>
                <TextView
                    android:layout_below="@id/age_label"
                    android:id="@+id/tele_label"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/avator"
                    android:layout_width="60dp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_height="30dp"
                    android:gravity="right"
                    android:text="电话："/>
                <TextView
                    android:layout_toRightOf="@id/name_label"
                    android:layout_marginTop="30dp"
                    android:id="@+id/name_value"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_height="30dp"
                    android:text="Jacob"/>
                <TextView
                    android:layout_below="@id/name_value"
                    android:id="@+id/age_value"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/age_label"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_height="30dp"
                    android:text="5年"/>
                <TextView
                    android:layout_below="@id/age_value"
                    android:id="@+id/tele_value"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tele_label"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_height="30dp"
                    android:text="18913512984"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#11000000"
                android:layout_height="1dp">

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:elevation="5dp"
                    android:layout_centerInParent="true"
                    android:padding="13dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/shop_info_border"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/district_label"
                        android:layout_width="100dp"
                        android:textSize="18sp"
                        android:layout_height="30dp"
                        android:text="服务地区"/>
                    <TextView
                        android:layout_below="@id/district_label"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/price_label"
                        android:layout_width="100dp"
                        android:textSize="18sp"
                        android:layout_height="30dp"
                        android:text="服务报价"/>
                    <TextView
                        android:layout_below="@id/price_label"
                        android:id="@+id/intro_label"
                        android:layout_marginLeft="15dp"
                        android:layout_width="100dp"
                        android:textSize="18sp"
                        android:layout_height="30dp"
                        android:text="服务介绍"/>
                    <TextView
                        android:id="@+id/district_value"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="18sp"
                        android:text="上海"
                        android:layout_toRightOf="@id/district_label"
                        android:textColor="#000000"
                        android:layout_marginTop="20dp"
                        />
                    <TextView
                        android:id="@+id/price_value"
                        android:layout_below="@id/district_value"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="18sp"
                        android:text="150-300元"
                        android:layout_toRightOf="@id/district_label"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:id="@+id/intro_value"
                        android:layout_below="@id/price_value"
                        android:layout_width="100dp"
                        android:maxLines="2"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:singleLine="true"
                        android:text="洗剪烫染,llllll"
                        android:layout_toRightOf="@id/district_label"
                        android:textColor="#000000"
                        />
                    <RelativeLayout
                        android:layout_toRightOf="@id/intro_value"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/rating_border"
                        >
                        <TextView
                            android:id="@+id/rating_value"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="-荣耀值-"
                            android:layout_marginTop="15dp"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:id="@+id/rating"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text="84"
                            android:layout_below="@id/rating_value"
                            android:textColor="#000000"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            />

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleview"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView >


</LinearLayout>